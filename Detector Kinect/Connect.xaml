<Window x:Class="Microsoft.Samples.Kinect.DepthBasics.Connect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connect" Height="300" Width="300" ResizeMode="NoResize">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Height="37" Margin="31,22,0,0" TextWrapping="Wrap" Text="Kinect Object Detector" VerticalAlignment="Top" Width="234" FontWeight="Bold" FontSize="20"/>
        <TextBox x:Name="ip" HorizontalAlignment="Left" Height="25" Margin="127,90,0,0" TextWrapping="Wrap" Text="127.0.0.1" VerticalAlignment="Top" Width="139"/>
        <Label Content="IP Address :" HorizontalAlignment="Left" Height="25" Margin="10,90,0,0" VerticalAlignment="Top" Width="107"/>
        <TextBox x:Name="port" HorizontalAlignment="Left" Height="25" Margin="127,134,0,0" TextWrapping="Wrap" Text="11000" VerticalAlignment="Top" Width="139"/>
        <Label Content="Port :" HorizontalAlignment="Left" Height="25" Margin="10,135,0,0" VerticalAlignment="Top" Width="107"/>
        <Button Content="Start" HorizontalAlignment="Center" Margin="78,206,62.6,25.4" Width="153" Click="Button_Click"/>

    </Grid>
</Window>
